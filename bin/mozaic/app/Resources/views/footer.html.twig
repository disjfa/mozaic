<div class="bg-faded">
    <div class="container py-5">
        <div class="row">
            <div class="col-sm-4">
                <a href="{{ path('disjfa_mozaic_puzzle_daily') }}">
                    <i class="fa fa-calendar"></i>
                    Play today's game
                </a>
                <br>
                <a href="{{ path('disjfa_mozaic_puzzle_random') }}">
                    <i class="fa fa-puzzle-piece"></i>
                    Play random game
                </a>
            </div>
            <div class="col-sm-4">
                {% if app.user %}
                    <a href="{{ path('fos_user_profile_show') }}">
                        <i class="fa fa-user"></i>
                        profile
                    </a>
                    <br>
                    <a href="{{ path('disjfa_mozaic_puzzle_my_progress') }}">
                        <i class="fa fa-calendar"></i>
                        progress
                    </a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">
                        <i class="fa fa-user"></i>
                        login
                    </a>
                    <br>
                    <a href="{{ path('fos_user_registration_register') }}">
                        <i class="fa fa-user-plus"></i>
                        register
                    </a>
                {% endif %}
            </div>
            <div class="col-sm-4">
                <a href="https://www.facebook.com/mozaicpuzzle/">
                    <i class="fa fa-facebook"></i>
                    facebook
                </a>
            </div>
        </div>
    </div>
</div>
{% block javascripts %}
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    {% if addthis_pubid %}
        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid={{ addthis_pubid }}"></script>
    {% endif %}
    {% if app.environment == 'dev' %}
        <script src="{{ asset('site/js/site.js') }}"></script>
    {% else %}
        <script src="{{ asset('site/js/site.min.js') }}"></script>
    {% endif %}
{% endblock %}
