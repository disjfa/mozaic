<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Glynn admin{% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}">

    <link rel="stylesheet" href="{{ asset('glynn-admin/css/glynn-admin.css') }}">
</head>
<body>
<div class="page">
    <div class="page-sidebar">
        <div class="sidebar">
            <a href="#" class="pull-right hidden-lg-up pull-xs-right py-1 px-1 text-muted" data-toggle="collapse" data-target="#main-menu">
                &#9776;
            </a>
            <div class="text-lg-center py-1 px-1">
                <a class="site-title" href="{{ path('glynn-admin-homepage') }}">
                    <img src="{{ asset("/glynn-admin/img/barista-icons_coffea-arabica.svg") }}" alt="" title="">
                    <span class="hidden-lg-up">
                        Glynn admin
                    </span>
                </a>
            </div>
            <div class="collapse navbar-toggleable-md" id="main-menu">
                {% if app.user %}
                    <div class="dropdown pull-right">
                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn text-white">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <a class="dropdown-item" href="{{ path('fos_user_profile_show') }}">
                                <i class="fa fa-user"></i> Profile
                            </a>
                            <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">
                                <i class="fa fa-sign-out"></i> Logout
                            </a>
                        </div>
                    </div>

                    <a class="sidebar-user" href="{{ path('fos_user_profile_show') }}">
                        <div class="media">
                            <div class="media-left">
                                <img src="{{ gravatar(app.user.email) }}" class="rounded img-fluid sidebar-user-img" alt="Profile image">
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">
                                    {{ app.user.username }}
                                </h4>
                                {{ app.user.email }}
                            </div>
                        </div>
                    </a>
                {% endif %}
                {{ knp_menu_render('glynn-admin', {'currentClass': 'active', 'ancestorClass': 'active', 'depth':3, 'template': 'glynn-admin/menu.html.twig'}) }}
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="page-main-bg container">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
{% block javascripts %}
    <script src="{{ asset('glynn-admin/js/glynn-admin.js') }}"></script>
{% endblock %}
</body>
</html>
