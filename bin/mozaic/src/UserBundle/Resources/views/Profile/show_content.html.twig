{% trans_default_domain 'FOSUserBundle' %}

<h1>Profile</h1>
<div class="row">
    <div class="col-sm-2 col-xs-12">
        <img src="{{ gravatar(app.user.email, 200) }}" alt="Profile image" class="img-circle img-fluid ">
    </div>
    <div class="col-sm-10 col-xs-12">
        <h4>
            {{ app.user.username }}
            <br>
            <small class="text-muted">{{ app.user.email }}</small>
        </h4>
        <div class="btn-group">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">
                Edit profile
            </a>
            <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">
                Change password
            </a>
        </div>
    </div>
</div>
