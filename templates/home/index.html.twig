{% extends "base.html.twig" %}

{% block meta_og %}
    <meta property="og:type" content="puzzle">
    <meta property="og:url" content="{{ path('home_index') }}">
    <meta property="og:title" content="Mozaic by dimme">
    <meta property="og:image" content="{{ asset('img/mozaic-by-dimme.jpg') }}">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="338">
    <meta property="og:description" content="A cool looking puzzle game">
{% endblock %}

{% block title %}
    Moziac puzzle
{% endblock %}

{% block body %}
    <div class="bg-primary text-white py-5">
        <div class="container py-5">
            <h1>Mozaic by dimme</h1>
            <p>A cool looking puzzle game</p>
            <p>
                <a href="{{ path('disjfa_mozaic_season_index') }}" class="btn btn-success d-block d-lg-inline-block mt-2 text-left">
                    <i class="fas fa-fw fa-dice"></i>
                    Play a season
                </a>
                <a href="{{ path('disjfa_mozaic_puzzle_daily') }}" class="btn btn-info d-block d-lg-inline-block mt-2 text-left">
                    <i class="fas fa-fw fa-calendar"></i>
                    Play today's game
                </a>
                <a href="{{ path('disjfa_mozaic_puzzle_random') }}" class="btn btn-midnight d-block d-lg-inline-block mt-2 text-left">
                    <i class="fas fa-fw fa-puzzle-piece"></i>
                    Play random game
                </a>
            </p>
        </div>
    </div>

    <div class="container py-5">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3 text-center">
                <span class="fa-stack fa-5x">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-users fa-stack-1x text-light"></i>
                </span>
            </div>
            <div class="col-12 col-md-8 col-lg-9">
                {% if app.user %}
                    <h3>Hi {{ app.user.username }}</h3>
                    <p>
                        Welcome back. Hope you like the game.
                    </p>
                    <div class="btn-group">
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-outline-primary">
                            <i class="fa fa-user"></i>
                            profile
                        </a>
                        <a href="{{ path('disjfa_mozaic_puzzle_my_progress') }}" class="btn btn-outline-primary">
                            <i class="fa fa-calendar"></i>
                            progress
                        </a>
                    </div>
                {% else %}
                    <h3>Log in</h3>
                    <p>
                        And keep track of your progress.
                    </p>
                    <div class="btn-group">
                        <a href="{{ path('fos_user_security_login') }}" class="btn btn-outline-primary">
                            <i class="fa fa-user"></i>
                            login
                        </a>
                        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-outline-primary">
                            <i class="fa fa-user-plus"></i>
                            register
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
    <div class="bg-success text-white">
        <div class="container py-5">
            <div class="row">
                <div class="col-12 col-md-4 col-lg-3 text-center order-md-last">
                    <span class="fa-stack fa-5x">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-calendar fa-stack-1x text-dark"></i>
                    </span>
                </div>
                <div class="col-12 col-md-8 col-lg-9">
                    <div class="py-2">
                        <h3>Today's game</h3>
                        <p>
                            Every day we create a new game. You can check it out and play. Enjoy!
                        </p>
                        <a href="{{ path('disjfa_mozaic_puzzle_daily') }}" class="btn btn-primary">
                            <i class="fa fa-calendar"></i>
                            play today's game
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-info text-white">
        <div class="container py-5">
            <div class="row">
                <div class="col-12 col-md-4 col-lg-3 text-center">
                    <span class="fa-stack fa-5x">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-random fa-stack-1x text-dark"></i>
                    </span>
                </div>
                <div class="col-12 col-md-8 col-lg-9">
                    <div class="py-2">
                        <h3>Random game</h3>
                        <p>
                            Can't wait till tomorrow. No need, just play a random game.
                        </p>
                        <a href="{{ path('disjfa_mozaic_puzzle_random') }}" class="btn btn-primary">
                            <i class="fa fa-random"></i>
                            play random game
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container py-5">
        <h4>Share</h4>
        <p>If you see a puzzle you like, share. Other people might like it too.</p>
        <div class="btn-group">
            <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('home_index') | url_encode }}" class="btn btn-outline-primary">
                <i class="fab fa-fw fa-facebook-f"></i>
            </a>
            <a href="https://twitter.com/home?status={{ url('home_index') | url_encode }}" class="btn btn-outline-primary">
                <i class="fab fa-fw fa-twitter"></i>
            </a>
        </div>
    </div>
{% endblock %}
